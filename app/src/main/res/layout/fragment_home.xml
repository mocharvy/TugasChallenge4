<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hai_arvy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Hai, Arvy"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mau_makan_apa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="mau makan apa hari ini?"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hai_arvy" />

        <GridLayout
            android:id="@+id/llCategories"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:columnCount="4"
            android:rowCount="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/banner" />

        <ImageView
            android:id="@+id/user"
            android:layout_width="33dp"
            android:layout_height="28dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="User Botton"
            android:src="@drawable/user"
            app:layout_constraintBottom_toBottomOf="@id/hai_arvy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/trolley"
            android:layout_width="33dp"
            android:layout_height="28dp"
            android:src="@drawable/trolley"
            app:layout_constraintBottom_toBottomOf="@id/hai_arvy"
            app:layout_constraintEnd_toStartOf="@id/user"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mau_makan_apa" />

        <ImageView
            android:id="@+id/img_kentang"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kentang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/banner" />

        <TextView
            android:id="@+id/kentang_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Fries"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/img_kentang"
            app:layout_constraintStart_toStartOf="@id/img_kentang"
            app:layout_constraintTop_toBottomOf="@id/img_kentang" />

        <ImageView
            android:id="@+id/img_chicken"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chicken"
            app:layout_constraintStart_toEndOf="@id/img_kentang"
            app:layout_constraintTop_toBottomOf="@id/banner" />

        <TextView
            android:id="@+id/chicken_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Fried Chicken"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/img_chicken"
            app:layout_constraintStart_toStartOf="@id/img_chicken"
            app:layout_constraintTop_toBottomOf="@id/img_chicken" />

        <ImageView
            android:id="@+id/img_sushi"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sushi"
            app:layout_constraintStart_toEndOf="@id/img_chicken"
            app:layout_constraintTop_toBottomOf="@id/banner" />

        <TextView
            android:id="@+id/sushi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sushi"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/img_sushi"
            app:layout_constraintStart_toStartOf="@id/img_sushi"
            app:layout_constraintTop_toBottomOf="@id/img_sushi" />

        <ImageView
            android:id="@+id/img_dimsum"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dimsum"
            app:layout_constraintStart_toEndOf="@id/img_sushi"
            app:layout_constraintTop_toBottomOf="@id/banner"
            />

        <TextView
            android:id="@+id/dimsum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Dimsum"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/img_dimsum"
            app:layout_constraintStart_toStartOf="@id/img_dimsum"
            app:layout_constraintTop_toBottomOf="@id/img_dimsum" />

        <TextView
            android:id="@+id/list_menu_makanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15sp"
            android:text="List Menu Makanan"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kentang_text"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_menu_makanan">

            <ImageButton
                android:id="@+id/btn_list"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="24dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="List Button"
                android:src="@drawable/baseline_grid_view_24"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_menu_makanan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_list"
                app:spanCount="2" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>

